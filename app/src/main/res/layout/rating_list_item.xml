<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <LinearLayout
        android:background="#38aae1"
        android:id="@+id/bottom_wrapper"
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/remove"
            android:src="@drawable/ic_delete_white_48dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/position"
            android:src="@drawable/ic_my_location_white_48dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <!--What you want to show-->
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:src="@drawable/ampel_green"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tobias Feldmann"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:id="@+id/location_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iconType"
                    android:src="@drawable/ic_account_balance_grey600_48dp"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile App Developer"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="5dp"
                    android:id="@+id/location_type" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile App Developer"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/loction_address" />

        </LinearLayout>
    </LinearLayout>

    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>


